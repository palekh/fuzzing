{
  "name": "fuzzing",
  "version": "0.8.5",
  "description": "Tool set for fuzz testing üê∞",
  "repository": "https://github.com/usehotkey/fuzzing.git",
  "author": "Igor Golopolosov<igolopolosov@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev:lint": "tslint -p . --type-check -c \"./tslint.json\" \"./src/**/*.ts\"",
    "ci:build": "tsc --noEmit",
    "ci:lint": "npm run dev:lint",
    "ci:test": "jest",
    "ci:coverage": "jest --coverage",
    "test": "npm run ci:build && npm run ci:lint && npm run ci:test",
    "precommit": "npm test",
    "prepublishOnly": "tsc -d -p \"./tsconfig.build.json\"",
    "prepush": "npm test",
    "start": "tsc --watch --noEmit"
  },
  "devDependencies": {
    "@types/jest": "20.0.8",
    "@types/node": "8.0.28",
    "jest": "21.1.0",
    "ts-jest": "21.0.1",
    "tslint": "5.7.0",
    "typescript": "2.5.2"
  },
  "jest": {
    "coverageReporters": [
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
