{
  "name": "fuzzing",
  "version": "0.8.1",
  "description": "Tool set for fuzzing testing.",
  "repository": "https://github.com/usehotkey/fuzzing.git",
  "author": "Igor Golopolosov<igolopolosov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "tslint": "tslint",
    "lint": "npm run tslint -c ./tslint.json src/**/*.ts",
    "coverage": "jest --coverage",
    "precommit": "npm test & npm run lint",
    "prepush": "tsc --noEmit & npm test & npm run lint",
    "start": "tsc --watch --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "8.0.28",
    "jest": "^21.0.2",
    "ts-jest": "^21.0.0",
    "tslint": "5.7.0",
    "typescript": "2.5.2"
  },
  "jest": {
    "coverageReporters": [
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
